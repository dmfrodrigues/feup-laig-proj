<lsf>
    <initials>
        <reference length="1.0"/>
        <root id="root"/>
    </initials>
    <views default="closer_camera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="perspective_camera" near="0.1" far="500" angle="45">
            <from x="10.0" y="3.0" z="10.0"/>
            <to   x= "0.0" y="1.0" z= "0.0"/>
        </perspective>
        <perspective id="closer_camera" near="0.1" far="500" angle="45">
            <from x="4.0" y="1.0" z="4.0"/>
            <to   x="0.0" y="0.0" z="0.0"/>
        </perspective>
        <ortho id="ortho_camera" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10"/>
            <to x="5" y="0" z="0"/>
            <up x="0" y="1" z="0"/><!-- optional, default 0,1,0 -->
        </ortho>
    </views>
    <illumination>
        <ambient    r="0.2" g="0.2" b="0.2" a="1.0"/>
        <background r="0.1" g="0.7" b="1.0" a="1.0"/>
    </illumination>
    <lights>
        <!-- NOTE: at least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="light1">
            <enable value="1"/>
            <position x="10.0" y="12.0" z="9.5" w="1.0"/> <!-- w=1: point light; w=0: directional light -->
            <ambient  r= "0.0" g= "0.0" b="0.0" a="1.0"/>
            <diffuse  r= "1.0" g= "1.0" b="1.0" a="1.0"/>
            <specular r= "1.0" g= "1.0" b="1.0" a="1.0"/>
        </light>
    </lights>
    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
        <texture id="black_painted_metal" path="./scenes/images/black-painted-metal.jpg"/>
        <texture id="plastic_pink"        path="./scenes/images/plastic-pink.jpg"       />
        <texture id="white_tabletop"      path="./scenes/images/white-tabletop.jpg"     />
        <texture id="world_map"           path="./scenes/images/world-map.jpg"          />
        <texture id="worn_out_plastic"    path="./scenes/images/plastic-yellow.jpg"     />        
    </textures>
    <materials>
        <!-- At least one material should be present. -->
        <material id="plastic">
            <shininess value="1.0"/>
            <ambient  r="1.0" g="1.0" b="1.0" a="1.0"/>
            <diffuse  r="1.0" g="1.0" b="1.0" a="1.0"/>
            <specular r="0.3" g="0.3" b="0.3" a="1.0"/>
            <emissive r="0.0" g="0.0" b="0.0" a="1.0"/>
        </material>
        <material id="metal">
            <shininess value="4.0"/>
            <ambient  r="1.0" g="1.0" b="1.0" a="1.0"/>
            <diffuse  r="1.0" g="1.0" b="1.0" a="1.0"/>
            <specular r="0.6" g="0.6" b="0.6" a="1.0"/>
            <emissive r="0.0" g="0.0" b="0.0" a="1.0"/>
        </material>
    </materials>

    <nodes>
        <node id="root">
            <descendants>
                <noderef id="globe_world"/>
            </descendants>
        </node>
        <node id="chair">
            <material id="plastic"/>
            <texture  id="plastic_pink"/>
            <descendants>
                <noderef id="chair_leg1"/>
                <noderef id="chair_leg2"/>
                <noderef id="chair_leg3"/>
                <noderef id="chair_leg4"/>
                <noderef id="chair_seat"/>
                <noderef id="chair_back"/>
            </descendants>
        </node>
        <node id="chair_seat">
            <transformations>
                <translation x="0.0" y="0.325" z="0.0"/>
                <scale sx="0.25" sy="0.05" sz="0.30"/>
            </transformations>
            <descendants>
                <noderef id="cube"/>
            </descendants>
        </node>
        <node id="chair_back">
            <transformations>
                <translation x="0.0" y="0.50" z="-0.125"/>
                <scale sx="0.25" sy="0.30" sz="0.05"/>
            </transformations>
            <descendants>
                <noderef id="cube"/>
            </descendants>
        </node>
        <node id="chair_leg1"><transformations><translation x="+0.100" y="0.000" z="+0.125"/></transformations><descendants><noderef id="chair_leg"/></descendants></node>
        <node id="chair_leg2"><transformations><translation x="-0.100" y="0.000" z="+0.125"/></transformations><descendants><noderef id="chair_leg"/></descendants></node>
        <node id="chair_leg3"><transformations><translation x="+0.100" y="0.000" z="-0.125"/></transformations><descendants><noderef id="chair_leg"/></descendants></node>
        <node id="chair_leg4"><transformations><translation x="-0.100" y="0.000" z="-0.125"/></transformations><descendants><noderef id="chair_leg"/></descendants></node>
        <node id="chair_leg">
            <transformations>
                <translation  x="0.00"  y="0.15"  z="0.00"/>
                <scale       sx="0.05" sy="0.30" sz="0.05"/>
            </transformations>
            <descendants>
                <noderef id="cube"/>
            </descendants>
        </node>
        <node id="cube">
            <descendants>
                <noderef id="cube_top"/>
                <noderef id="cube_bot"/>
                <noderef id="cube_lef"/>
                <noderef id="cube_rig"/>
                <noderef id="cube_fro"/>
                <noderef id="cube_bac"/>
            </descendants>
        </node>
        <node id="cube_top"><transformations><translation x="+0.0" y="+0.5" z="+0.0"/><rotation axis="xx" angle= "-90"/></transformations><descendants><leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/></descendants></node>
        <node id="cube_bot"><transformations><translation x="+0.0" y="-0.5" z="+0.0"/><rotation axis="xx" angle= "+90"/></transformations><descendants><leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/></descendants></node>
        <node id="cube_fro"><transformations><translation x="+0.0" y="+0.0" z="+0.5"/>                                 </transformations><descendants><leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/></descendants></node>
        <node id="cube_bac"><transformations><translation x="+0.0" y="+0.0" z="-0.5"/><rotation axis="xx" angle="+180"/></transformations><descendants><leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/></descendants></node>
        <node id="cube_rig"><transformations><translation x="+0.5" y="+0.0" z="+0.0"/><rotation axis="yy" angle= "+90"/></transformations><descendants><leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/></descendants></node>
        <node id="cube_lef"><transformations><translation x="-0.5" y="+0.0" z="+0.0"/><rotation axis="yy" angle= "-90"/></transformations><descendants><leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/></descendants></node>
    
        <node id="table">
            <material id="metal"/>
            <texture id="black_painted_metal"/>

            <!-- geom. transf. are optional and may be repeated, in any order, as necessary: -->
            <transformations>
                <translation x="0.0" y="0.0" z="0.0"/>
            </transformations>

            <descendants>
                <noderef id="table_top"/>
                <noderef id="table_leg1"/>
                <noderef id="table_leg2"/>
                <noderef id="table_leg3"/>
                <noderef id="table_leg4"/>
            </descendants>
        </node>

        <node id="table_leg1"><transformations><translation x="-0.4" y="+0.25" z="+0.2"/></transformations><descendants><noderef id="table_leg"/></descendants></node>
        <node id="table_leg2"><transformations><translation x="-0.4" y="+0.25" z="-0.2"/></transformations><descendants><noderef id="table_leg"/></descendants></node>
        <node id="table_leg3"><transformations><translation x="+0.4" y="+0.25" z="-0.2"/></transformations><descendants><noderef id="table_leg"/></descendants></node>
        <node id="table_leg4"><transformations><translation x="+0.4" y="+0.25" z="+0.2"/></transformations><descendants><noderef id="table_leg"/></descendants></node>

        <node id="table_leg">
            <transformations>
                <rotation axis="xx" angle="-90"/>
            </transformations>
            <descendants>
                <leaf type="cylinder" bottomRadius="0.04" topRadius="0.04" height="0.5" slices="32" stacks="8"/>
            </descendants>
        </node>
        
        <node id="table_top">
            <material id="plastic"/>
            <texture id="white_tabletop"/>
            <transformations>
                <translation x="0.0" y="0.5035" z="0.0"/>
                <scale sx="1.0" sy="0.007" sz="0.5"/>
            </transformations>
            <descendants>
                <noderef id="cube"/>
            </descendants>
        </node>

        <node id="globe_world">
            <material id="plastic"/>
            <texture id="world_map"/>
            <descendants>
                <!-- slices should be a multiple of 24, and stacks a multiple of 6 -->
                <leaf type="sphere" radius="0.18" slices="72" stacks="24"/>
            </descendants>
        </node>
        <node id="globe_axis">
            <material id="plastic"/>
            <texture id="worn_out_plastic"/>
            <transformations>
                <translation x="0.00" y="0.00" z="-0.23"/>
            </transformations>
            <descendants>
                <leaf type="cylinder" height="0.42" topRadius="0.01" bottomRadius="0.01" stacks="10" slices="16"/>
            </descendants>
        </node>
        <node id="globe_world_axis">
            <transformations>
                <translation x="0.00" y="0.22" z="0.00"/>
                <rotation axis="xx" angle="-90"/>
            </transformations>
            <descendants>
                <noderef id="globe_world"/>
                <noderef id="globe_axis"/>
            </descendants>
        </node>
        <node id="globe_world_axis_tilted">
            <transformations>
                <rotation axis="zz" angle="-23"/>
            </transformations>
            <descendants>
                <noderef id="globe_world_axis"/>
            </descendants>
        </node>
        
        <node id="globe_wheel">
            <transformations>
                <translation x="0.0000" y="0.0000" z="-0.0125"/>
            </transformations>
            <descendants>
                <leaf type="cylinder" height="0.025" topRadius="0.02" bottomRadius="0.02" stacks="2" slices="32"/>
            </descendants>
        </node>
        <node id="globe_support">
            <transformations>
                <translation x="0.000" y="-0.030" z="0.000"/>
                <rotation axis="xx" angle="-90"/>
            </transformations>
            <descendants>
                <leaf type="cylinder" height="0.03" topRadius="0.01" bottomRadius="0.01" stacks="4" slices="16"/>
            </descendants>
        </node>
        <node id="globe_base">
            <transformations>
                <translation x="+0.08596" y="-0.05" z="0.000"/>
                <rotation axis="xx" angle="-90"/>
            </transformations>
            <descendants>
                <leaf type="cylinder" height="0.02" topRadius="0.18" bottomRadius="0.20" stacks="2" slices="64"/>
            </descendants>
        </node>

        <node id="globe_plastic">
            <material id="plastic"/>
            <texture id="worn_out_plastic"/>
            <descendants>
                <noderef id="globe_wheel"/>
                <noderef id="globe_support"/>
                <noderef id="globe_base"/>
            </descendants>
        </node>
        <node id="globe">
            <transformations>
                <translation x="-0.08596" y="+0.05" z="0.0"/>
            </transformations>
            <descendants>
                <noderef id="globe_world_axis_tilted"/>
                <noderef id="globe_plastic"/>
            </descendants>
        </node>
    </nodes>
</lsf>
